@model AD419.DataHelper.Web.Models.ActivityModel

@{
    ViewBag.Title = "Edit Activity";
}

<h2>Edit Activity</h2>

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Activity Information</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <dl class="dl-horizontal">
                        <dt>Activity:</dt>
                        <dd><strong>@Model.Activity</strong></dd>

                        <dt>Description:</dt>
                        <dd>@Model.Activity_Description</dd>
                    </dl>

                    <hr />

                    <div class="form-group">
                        <label for="IsExcluded">Exclude from AD-419?</label>
                        @Html.DropDownListFor(
                            model => model.IsExcluded,
                            new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Not Set", Value = "" },
                                new SelectListItem { Text = "No", Value = "False" },
                                new SelectListItem { Text = "Yes", Value = "True" }
                            },
                            new { @class = "form-control" }
                        )
                        @Html.ValidationMessageFor(model => model.IsExcluded, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save Classification</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Classification Guidelines</h3>
            </div>
            <div class="panel-body">
                <p><strong>Exclude from AD-419 if:</strong></p>
                <ul>
                    <li>Activity is not related to research</li>
                    <li>Activity represents administrative overhead</li>
                    <li>Activity is deprecated or unused</li>
                </ul>
                <p><strong>Include in AD-419 if:</strong></p>
                <ul>
                    <li>Activity supports research activities</li>
                    <li>Activity is used for grant reporting</li>
                    <li>Activity tracks project-related work</li>
                </ul>
            </div>
        </div>
    </div>
</div>