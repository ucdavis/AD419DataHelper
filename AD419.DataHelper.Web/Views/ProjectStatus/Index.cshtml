@model AD419.DataHelper.Web.Models.ProjectStatusViewModel

@{
    ViewBag.Title = "Index - Project Status";
}

@Html.Partial("_CurrentAd419ProjectsForMissingProjectStatuses", @Model)

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectStatuses[0].Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectStatuses[0].IsExcluded)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ProjectStatuses) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExcluded)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
