<div class="modal fade" id="uploadModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Upload a Field Station Expenses Excel file</h4>
            </div>

            <ul id="uploadTabs" class="step-progressbar">
                <li id="uploadStepper" class="active">
                    <h2>Upload</h2>
                </li>
                <li id="reviewStepper">
                    <h2>Review</h2>
                </li>
                <li id="confirmStepper">
                    <h2>Confirm</h2>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="uploadTab">
                    <div class="modal-image">
                        <img src="~/Content/Images/FieldStationExpensesExample.png" alt="Field Station Expenses Excel upload file example">
                    </div>
                    <form id="uploadForm" enctype="multipart/form-data" class="">
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <p>
                                Please ensure your spreadsheet has the column names as illustrated above.<br />
                                Note that ProjectAccessionNum will automatically have leading zero(s) added.<br />
                                Download a sample form <a href="~/Content/Sample_Forms/ModifiedFieldStationExpensesForImport.xlsx">HERE <i class="fa fa-download"></i></a>
                            </p>
                            <div class="form-group">
                                <label class="control-label">Please select an Field Station Expenses Excel file to display:</label>
                                <input type="file" id="file" name="file" class="" required/>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-default" value="Process"/>
                        </div>
                    </form>
                </div>
                <div class="tab-pane" id="loadingTab">
                    <div class="loader text-center">
                        <i class="fa fa-spinner fa-spin fa-fw"></i>
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
                <div class="tab-pane" id="errorTab">
                    <div class="modal-body">
                        <div class="alert alert-danger" role="alert">
                            Something has gone terribly wrong. Are you sure you uploaded a proper file?
                        </div>
                    </div>
                    <div class="modal-footer text-left">
                        <div class="flex-between">
                            <button id="resetErrorButton" class="btn btn-danger"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</button>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="reviewTab">
                    <div class="modal-body" id="review"></div>
                    <div class="modal-footer">
                        <div class="flex-between">
                            <button id="returnUploadButton" class="btn btn-danger"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</button>
                            <button id="continueConfirmButton" class="btn btn-default">Confirm and Upload <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="confirmTab">
                    <div class="modal-body text-center">
                        <p>
                            If everything looked good, you can upload the values to the database.<br />
                            <br />
                            <i>Note: You can also edit the values once they have been saved.</i>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <div class="flex-between">
                            <button id="returnReviewButton" class="btn btn-danger"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</button>
                            <button id="confirmButton" class="btn btn-default">Save to Database</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>