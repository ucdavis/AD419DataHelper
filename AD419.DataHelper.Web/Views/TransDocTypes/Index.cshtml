        </th>
        <th></th>
    </tr>

@foreach (var item in Model.TransDocTypes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludeInFTECalc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncludeInFISExpenses)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DocumentType }) |
            @Html.ActionLink("Details", "Details", new { id=item.DocumentType }) |
