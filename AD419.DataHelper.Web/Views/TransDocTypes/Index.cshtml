}

@Html.Partial("_LaborTransactionsForMissingCodes", @Model)

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransDocTypes[0].DocumentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransDocTypes[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransDocTypes[0].IncludeInFTECalc)
