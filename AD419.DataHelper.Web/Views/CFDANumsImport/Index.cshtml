@model IEnumerable<AD_419_DataHelperWebApp.Models.CFDANumImport>

@{
    ViewBag.Title = "Index - CFDA Numbers";
}

@Html.Partial("_CfdaNumsUpload")
<hr />
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", "CFDANumsImport", null, new { @class="btn btn-default" })
</p>

@if (Model.Count() != 0)
{
    using (Html.BeginForm("DeleteAll", "CFDANumsImport", FormMethod.Post, new { id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" id="btnDeleteAll" value="Delete All" title="Delete All" class="btn btn-default" onclick="return confirm('Are you sure you want to delete ALL the records?')" />
        </p>
    }

    <table id="cfdaImportTable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CFDANum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramTitle)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CFDANum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProgramTitle)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>CFDA Numbers Data has yet to be created or uploaded.</h4>
    <p>Select the "Create New" (above) or browse and display an existing CFDA Numbers Excel file (above).</p>
}

@section AdditionalScripts
{
    <script>
        $(function() {
            $('#cfdaImportTable').DataTable({
                columnDefs: [
                    { targets: [-1, -2, -3], sortable: false }
                ]
            });
        })
    </script>
}
