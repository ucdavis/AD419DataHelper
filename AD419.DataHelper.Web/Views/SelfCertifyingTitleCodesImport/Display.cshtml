            @Html.HiddenFor(m => m[i].Id)
            @Html.HiddenFor(m => m[i].TitleCode)
            @Html.HiddenFor(m => m[i].TitleName)
            @*@Html.HiddenFor(m => m[i].ClassTitleOutline)*@
        }
