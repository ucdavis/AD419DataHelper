<div class="modal fade" id="uploadModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Upload a Self Certifying Title Codes Excel file</h4>
            </div>
            <div class="modal-image">
                <img src="~/Content/Images/TitleCodesSelfCertify.png" alt="&nbsp;&nbsp;<image of Self Certifying Title Codes Excel upload file example>">
            </div>
            @using (Html.BeginForm("Upload", "SelfCertifyingTitleCodesImport", FormMethod.Post, new { id = "UploadForm", enctype = "multipart/form-data", @class = "" }))
            {
                <div class="modal-body">
                    <p>
                        Please ensure your spreadsheet has the column names as illustrated above.<br />
                        Only the TITLE CODE and TITLE CODE NAME columns are required.<br />
                        Download a sample form <a href="~/Content/Sample_Forms/TitleCodesSelfCertify.xlsx">HERE <i class="fa fa-download"></i></a>
                    </p>
                    <div class="form-group">
                        <label class="control-label">Please select a Self Certifying Title Codes Excel file to display:</label>
                        <input type="file" id="FileUpload1" name="FileUpload1" class="" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" value="Upload" />
                </div>
            }
        </div>
    </div>
</div>
